@{
    ViewData["Title"] = "Add to list";
}
<h1>Add New Movies</h1> 
<form method="post">
    <div class="form-group mb-2">
        <label for="MovieName">Movie Name</label>
        <input type="text" class="form-control" id="MovieName" name="MovieName" placeholder="Enter Movie Name" required>
    </div>
    <div class="form-group mb-2">
        <label for="CoverImage">Cover Image</label>
        <input type="text" class="form-control" id="CoverImage" name="CoverImage" placeholder="Enter URL" required>
    </div>
    <div class="form-group mb-2">
        <label for="Genre">Genre</label>
        <input type="text" class="form-control" id="Genre" name="Genre" placeholder="Which Genre" required>
    </div>
    <div class="form-group mb-2">
        <label for="Director">Director</label>
        <input type="text" class="form-control" id="Director" name="Director" placeholder="Directed by..." required>
    </div>
    <div class="form-group mb-2">
        <label for="Location">Rating</label>
        <input type="number" min="0" class="form-control" id="Rating" name="Rating" placeholder="Rate from 1-10" required>
    </div>
    <div class="form-group mb-2">
        <label for="ReleaseDate">Release Date</label> 
        <input type="date" class="form-control" id="ReleaseDate" name="ReleaseDate" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
